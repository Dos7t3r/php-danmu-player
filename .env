APP_DEBUG = false

[PLAYER]
# 播放器验证配置
# 开启后将只允许指定refer头的域名嵌入
PLAYER_VERIFY_ENABLED = true
PLAYER_ALLOWED_DOMAINS = domain1.com,domain2.com
PLAYER_ADMIN_TOKEN_EXPIRE = 86400

[APP]
DEFAULT_TIMEZONE = Asia/Shanghai

[DATABASE]
# 数据库配置
TYPE = mysql
HOSTNAME = 127.0.0.1
DATABASE = 
USERNAME = 
PASSWORD = 
HOSTPORT = 3306
CHARSET = utf8mb4
DEBUG = true

[LANG]
default_lang = zh-cn

[CLOUDFLARE]
# Cloudflare Turnstile 配置（人机验证）
CLOUDFLARE_TURNSTILE_ENABLED = true
CLOUDFLARE_TURNSTILE_SITE_KEY = 
CLOUDFLARE_TURNSTILE_SECRET_KEY = 

# 登录保护配置
MAX_LOGIN_ATTEMPTS = 5
LOGIN_LOCKOUT_TIME = 1800

# Cloudflare API 配置（如果需要）
# CLOUDFLARE_API_TOKEN = 
# CLOUDFLARE_ZONE_ID =
